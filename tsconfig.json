{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "importHelpers": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "sourceMap": true,
      "baseUrl": "./",
      "strict": true,
      "noEmit": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "paths": {
        "@/*": ["src/*"],
      },
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*",
      "typings.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "test",
      "docs",
      "tests"
    ]
  }
  